<mah:MetroWindow x:Class="WindowsDev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:UserCtrl="clr-namespace:WindowsDev.View.Controls"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsDev"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="252">
    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout Header="Create project"
                        Position="Right"
                        IsOpen="True"
                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=mah:MetroWindow}}">

                <Grid Margin="20,0,20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <UserCtrl:AdvancedTextBlock Header="Project Name" Grid.Row="0"
                                                FieldMaxWidth="500"
                                                HorizontalAlignment="Stretch"/>
                    <UserCtrl:AdvancedTextBlock Header="Description" Grid.Row="1"
                                                ScrollBarVisibility="Auto"
                                                FieldMaxWidth="500" FieldHeight="200"
                                                TextWrapping="Wrap"
                                                Margin="0,20,0,0" HorizontalAlignment="Stretch"/>
                    
                </Grid>
            </mah:Flyout>
        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <mah:MetroAnimatedTabControl Grid.Row="0">
            <TabItem Header="Projects">
                <Grid>
                    <ToolBar>
                        <Button Content="Create Project"/>
                        <Button Content="Delete Project"/>
                    </ToolBar>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">

            </TabItem>
            <TabItem Header="Profile">

            </TabItem>
        </mah:MetroAnimatedTabControl>
    </Grid>
</mah:MetroWindow>
