<mah:MetroWindow x:Class="WindowsDev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:ViewModels="clr-namespace:WindowsDev.ViewModels"
        xmlns:Views="clr-namespace:WindowsDev.View.Controls.WindowsContent"
        mc:Ignorable="d"
        Title="TaskManager" Height="450" Width="800" MinWidth="252">

    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type ViewModels:AuthorizationViewModel}">
                    <Views:AuthorizationView/>
                </DataTemplate>

                <DataTemplate DataType="{x:Type ViewModels:RegistrationViewModel}">
                    <Views:RegistrationView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</mah:MetroWindow>