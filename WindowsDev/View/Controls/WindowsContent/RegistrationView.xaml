<UserControl x:Class="WindowsDev.View.Controls.WindowsContent.RegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:UserCtrl="clr-namespace:WindowsDev.View.Controls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsDev.View.Controls.WindowsContent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Margin="10,0,10,0">
            <UserCtrl:Logo Kind="TaskRound"
                           ViewBoxHeight="70" ViewBoxWidth="70"
                           Text="Sign up to TaskManager"
                           HorizontalContentAlignment="Center"
                           HorizontalAlignment="Stretch"/>

            <UserCtrl:AdvancedTextBlock CornerRadius="8" Margin="0,20,0,0"
                                        Header="Username"
                                        UseWatermark="True" Watermark="Username"
                                        FieldMaxWidth="400"/>

            <StackPanel MaxWidth="400" HorizontalAlignment="Stretch">

                <UserCtrl:PasswordBox
                    UseWatermark="True" Watermark="Password"
                    Header="Password"
                    HeaderFontSize="14"
                    Margin="0,20,0,0"
                    CornerRadius="8"
                    FieldMaxWidth="400"/>

                <TextBlock FontSize="10" Margin="0,5,0,0">
                    <Run Text="At least 12 characters" Foreground="Gray"/>
                    <LineBreak/>
                    <Run Text="Use a numbers" Foreground="Gray"/>
                    <LineBreak/>
                    <Run Text="Use a lowercase letters" Foreground="Gray"/>
                    <LineBreak/>
                    <Run Text="Use a symbols" Foreground="Gray"/>
                </TextBlock>
            </StackPanel>

            <Button Margin="0,20,0,0"
                    mah:ControlsHelper.CornerRadius="8"
                    MaxWidth="400">
                Sign up
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
