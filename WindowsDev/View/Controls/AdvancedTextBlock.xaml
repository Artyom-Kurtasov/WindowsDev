<UserControl x:Class="WindowsDev.View.Controls.AdvancedTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsDev.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="{Binding FieldMargin, RelativeSource={RelativeSource AncestorType=UserControl}}"
          HorizontalAlignment="Stretch">
        
        <mah:MetroHeader 
            Header="{Binding Header, RelativeSource={RelativeSource AncestorType=UserControl}}"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            MaxWidth="{Binding FieldMaxWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
            MinWidth="{Binding FieldMinWidth, RelativeSource={RelativeSource AncestorType=UserControl}}">

            <TextBox 
                mah:TextBoxHelper.UseFloatingWatermark="{Binding UseWatermark, RelativeSource={RelativeSource AncestorType=UserControl}}"
                mah:TextBoxHelper.Watermark="{Binding Watermark, RelativeSource={RelativeSource AncestorType=UserControl}}"
                mah:ControlsHelper.CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType=UserControl}}"
                TextWrapping="{Binding TextWrapping, RelativeSource={RelativeSource AncestorType=UserControl}}"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="{Binding ScrollBarVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Height="{Binding FieldHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                HorizontalAlignment="Stretch"
                MaxWidth="{Binding FieldMaxWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                MinWidth="{Binding FieldMinWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}">
            </TextBox>
            
        </mah:MetroHeader>
    </Grid>


</UserControl>
