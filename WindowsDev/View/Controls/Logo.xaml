<UserControl x:Class="WindowsDev.View.Controls.Logo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsDev.View.Controls" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <Viewbox Width="{Binding ViewBoxWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 Height="{Binding ViewBoxHeight, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <iconPacks:PackIconMaterialDesign Kind="{Binding Kind, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </Viewbox>

        <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </StackPanel>
</UserControl>
